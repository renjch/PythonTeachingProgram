import random

target = random.randint(0,10)
print(target)

guessed = False

for i in range(3):
    num = int(input('Please input number which you guess: '))
    if num == target:
        print('you are right')
        guessed = True
        break
    elif num < target:
        print('your number is less')
    else:
        print('your number is greater')

if guessed == True: # if guessed
    print('succussed')
else:
    print('sorry')


import turtle
import random

for i in range(3,21):
    turtle.fillcolor(random.random(),random.random(),random.random())
    turtle.begin_fill()
    for n in range(i):
        turtle.forward(20)
        turtle.left(360/i)
    turtle.end_fill()
turtle.done()
